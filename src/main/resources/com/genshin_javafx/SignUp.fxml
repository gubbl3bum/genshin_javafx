<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<VBox maxHeight="619.0" maxWidth="-900.0" minHeight="619.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.genshin_javafx.controllers.SignUpController">
    <AnchorPane prefHeight="663.0" prefWidth="900.0" style="-fx-background-color: RGB(32,36,66);">
        <AnchorPane layoutX="200.0" layoutY="146.0" prefHeight="333.0" prefWidth="501.0"
                    style="-fx-background-color: RGB(45,50,90); -fx-background-radius: 15;"/>
        <Text fill="#d0d8f3" layoutX="361.0" layoutY="86.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign up"
              styleClass="text-title-custom">
        </Text>

        <TextField fx:id="login" layoutX="407.0" layoutY="174.0" prefHeight="25.0" prefWidth="205.0"/>
        <Text fill="#d0d8f3" layoutX="319.0" layoutY="194.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login:"
              styleClass="text-criteria-custom">
        </Text>

        <PasswordField fx:id="password1" layoutX="407.0" layoutY="234.0" prefHeight="25.0" prefWidth="205.0"/>
        <Text fill="#d0d8f3" layoutX="296.0" layoutY="254.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Password:" styleClass="text-criteria-custom">
        </Text>

        <PasswordField fx:id="password2" layoutX="407.0" layoutY="290.0" prefHeight="25.0" prefWidth="205.0"/>
        <Text fill="#d0d8f3" layoutX="242.0" layoutY="310.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Repeat password:" styleClass="text-criteria-custom">
        </Text>
        <Button fx:id="Sign_up_button" layoutX="363.0" layoutY="394.0" mnemonicParsing="false" prefHeight="52.0"
                prefWidth="182.0" text="Sign up" styleClass="button-custom">
        </Button>
        <Button fx:id="Start_button" layoutX="662.0" layoutY="517.0" mnemonicParsing="false" prefHeight="52.0"
                prefWidth="182.0" text="Start" styleClass="button-custom">
        </Button>
        <stylesheets>
            <URL value="@style.css"/>
        </stylesheets>
    </AnchorPane>
</VBox>
